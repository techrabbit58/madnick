        inp             // read a number
        sta A           // and store it to location a

LOOP    lda A           // get the stored number
        out             // and write to the output
        sub ONE         // decrement
        sta A           // and write back the new value
        brz ENDTHIS     // branch if A is zero due to the decrement
        bra LOOP        // or instead decrement and output once more

ENDTHIS hlt             // stop

// variables
        org 80
A       dat

// constants
        org 90
ONE     dat 1

// end